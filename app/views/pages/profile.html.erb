<%# Banner %>
<div class="h-96 bg-transparent -mb-24">
  <div class="relative">
    <div class="px-2 flex-wrap">
      <div class="flex justify-between bg-no-repeat bg-cover bg-center h-40 rounded-t-lg my-10 mx-10" style="background-position: 50%; background-image: url('https://mdbcdn.b-cdn.net/img/new/slides/146.webp');">
    </div>
  </div>
<%# Avatar/ User details %>
  <div class="absolute top-0 left-16">
    <img src="https://mdbcdn.b-cdn.net/img/new/avatars/8.webp" class="rounded-full outline outline-yellow w-28 mt-28"/>
    <div class="pl-32">
      <h1 class="text-lg text-white -mt-24">John Doe</h1>
      <p class="text-sm mt-2 break-words">I'm a 29 year old guy from Iberian peninsula looking for adventure in China</p>
      <h3 class="text-xs"><small>Hiking, Kitesurfing, Industrial Climbing</small></h3>
    </div>
  </div>
<%# Icons %>
  <div class="absolute bottom-0 left-72 mb-2 text-white">
    <div class="">
      <a href=""><i class="fa-solid fa-thumbs-up hover:text-yellow text-2xl"></i></a>
      <a href=""><i class="fa-solid fa-flag hover:text-red-500 text-xl"></i></a>
      <a href=""><i class="fa-solid fa-user-pen hover:text-yellow text-xl"></i></a>
    </div>
  </div>
<%# Button %>
  <div class="absolute top-0 right-12">
    <button type="button" class="mt-28 mr-4 inline-block h-10 px-4 py-2.5 bg-yellow text-darkblue font-bold text-xs leading-tight rounded-lg">
        Create a new trip
    </button>
  </div>
</div>
</div>

<%# Photos %>
<div class="container grid grid-cols-2 gap-36 gap-y-10 px-10">
  <div class="overflow-scroll">
    <p class="text-lg font-bold -mb-8">Photos</p>
    <div class="container flex gap-4">
      <% 5.times do %>
        <img class="rounded-lg w-32 h-52" src="https://mdbootstrap.com/img/new/standard/nature/184.jpg"/>
      <% end %>
    </div>
  </div>

<%# My Trips %>
  <div class="overflow-scroll">
    <p class="text-lg font-bold -mb-8">Previous Trips</p>
    <div class="container flex gap-4">
      <% 5.times do %>
        <a href="#!" class="shrink-0">
          <img class="rounded-lg w-32 h-52" src="https://mdbootstrap.com/img/new/standard/nature/184.jpg"/>
          <p class="-mt-8 pl-2 text-white text-lg break-words">Bali</p>
        </a>
      <% end %>
    </div>
  </div>

<%# Previous Trips cards %>
  <div class="overflow-scroll">
    <p class="text-lg font-bold -mb-8">Previous Trips</p>
    <div class="container flex gap-4">
      <% 5.times do %>
        <a href="#!" class="shrink-0">
          <img class="rounded-lg w-32 h-52" src="https://mdbootstrap.com/img/new/standard/nature/184.jpg"/>
          <p class="-mt-8 pl-2 text-white text-lg break-words">Bali</p>
        </a>
      <% end %>
    </div>
  </div>

<%# Upcoming Trips %>
  <div class="overflow-scroll">
    <p class="text-lg font-bold -mb-8">Upcoming Trips</p>
    <div class="container flex gap-4">
      <% 5.times do %>
        <a href="#!" class="shrink-0">
          <img class="rounded-lg w-32 h-52" src="https://mdbootstrap.com/img/new/standard/nature/184.jpg"/>
          <p class="-mt-8 pl-2 text-white text-lg break-words">Bali</p>
        </a>
      <% end %>
    </div>
  </div>
</div>
