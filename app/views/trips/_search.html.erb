
<form action="">
  <div class=" flex justify-center  flex-col gap-4 md:flex-row">
    <%= simple_form_for :search, url: trips_path, method: "GET", html: { class: 'form' }, defaults: { required: false } do |f|%>
      <%= f.input :search, label: false, wrapper_html: { class: "px-3 lg:px-8 mx-auto w-72 md:w-82 lg:w-96" }, input_html: {value: "", class:"w-72 lg:w-96 rounded-md border border-transparent drop-shadow"}, placeholder: "Search for a trip"  %>
      <%= f.input :start_date, label: false, collection: @months = [ ['January', 1], ['February', 2], ['March', 3], ['April', 4], ['May', 5], ['June', 6], ['July', 7], ['August', 8], ['September', 9], ['October', 10], ['November', 11], ['December', 12]], as: :select, wrapper_html: { class: "px-3 md:px-8 mx-auto w-72 md:w-82 lg:w-96" }, input_html: {class:"w-72 md:w-82 lg:w-96 rounded-md border border-transparent drop-shadow text-gray-900"}, prompt: "Select a month"%>
      <%= f.input :activities, label: false, collection: ['surfing','hiking','kayaking','diving','racing','climbing','skydiving','partying','meditation', 'volunteering','wine tasting','fishing','hunting','other'], as: :select, wrapper_html: { class: "px-3 md:px-8 mx-auto w-72 md:w-82 lg:w-96" }, input_html: {class:"w-72 md:w-82 lg:w-96 rounded-md border border-transparent drop-shadow text-gray-900"}, prompt: "Select an activity"%>
      <%= f.submit "Search", class: "btn ml-10 inline-block px-6 py-2.5 bg-yellow text-darkblue font-bold text-lg leading-tight uppercase rounded shadow-md hover:bg-darkblue hover:text-white hover:shadow-lg focus:bg-teal-500 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out", id:"gold"%>
    <% end  %>
  </div>
</form>
