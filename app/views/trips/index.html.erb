<div>
  <%# banner and search %>
  <div class="flex justify-center bg-blue-800 h-96 bg-cover bg-center p-48" style="background-image: url(https://images.unsplash.com/photo-1521292270410-a8c4d716d518?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80)">
    <div class="relative">
      <div class="flex justify-center w-full">
        <div class="p-8 rounded-xl bg-white shadow-xl absolute top-32 w-max">
          <%= render 'trips/search'%>
        </div>
      </div>
    </div>
  </div>
  <%# end banner and search %>
  <div class="flex flex-wrap my-20">
    <div class="text-center w-full">
      <h2 class="-mt-4"> FOUND THESE PLACES JUST FOR <em><u><strong>YOU</u></em></strong> ! </h2>
    </div>
    <%# card %>
    <% @trips.each do |trip| %>
      <div class="p-4 mb-3 h-1/2 sm: rounded-sm drop-shadow bg-gray-50 md:w-1/3 drop-shadow-none">
        <%= link_to trip_path(trip) do %>
          <div class="rounded-lg h-64 overflow-hidden relative">
            <div class="">
              <img src="<%= trip.user.avatar %>" class=" rounded-full absolute top-3 right-3 bg-white z-10 sm:h-10 w-10 md:h-13 w-13 " alt="" loading="lazy"  />
              <div class="brightness-75">
                <img alt="content" class="" src="<%= trip.trip_img%>">
              </div>
            </div>
            <div class="absolute bottom-0 left-0">
            <%# trip.name %>
              <div>
                <h3 class="mt-3 inline-block px-2 text-white font-medium leading-tight uppercase text-lg bg-gray shadow-2xl"><strong>
                  <%= trip.trip_name %> in <%= trip.country %></strong>
                </h3>
              </div>
              <%# date %>
              <div class="px-1 mb-2">
                <h3 class="inline-block px-2 text-white font-medium text-xs leading-tight uppercase ">
                  <i class="fa-solid fa-calendar-days"></i>
                    <%= trip.start_date %> - <%= trip.end_date %>
                </h3>
              </div>
            </div>
          </div>
        <% end %>
        <%# tags %>
        <div class="grid grid-cols-4 gap-y-2 mt-2">
          <% trip.activities.each do |activity| %>

            <div class="bg-darkblue text-white rounded-full px-auto m-1 text-center ">
              <h4 class="text-xs md:text-sm font-bold"><%= activity %></h4>

            </div>
          <% end %>
        </div>
        <p class="text-base leading-relaxed mt-2"><%= trip.description %></p>
      </div>
    <% end %>
  </div>
</div>
